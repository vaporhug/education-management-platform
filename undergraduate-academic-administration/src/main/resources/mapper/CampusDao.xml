<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fjxgwzd.undergraduateacademicadministration.dao.CampusDao">

    <resultMap type="com.fjxgwzd.undergraduateacademicadministration.entity.Campus" id="CampusMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="location" column="location" jdbcType="VARCHAR"/>
        <result property="desc" column="desc" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CampusMap">
        select
          id, name, location, "desc"
        from campus
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CampusMap">
        select
          id, name, location, desc
        from campus
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="location != null and location != ''">
                and location = #{location}
            </if>
            <if test="desc != null and desc != ''">
                and desc = #{desc}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from campus
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="location != null and location != ''">
                and location = #{location}
            </if>
            <if test="desc != null and desc != ''">
                and desc = #{desc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into campus(name, location, desc)
        values (#{name}, #{location}, #{desc})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into campus(name, location, desc)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.location}, #{entity.desc})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into campus(name, location, desc)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.location}, #{entity.desc})
        </foreach>
        on duplicate key update
        name = values(name),
        location = values(location),
        desc = values(desc)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update campus
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="location != null and location != ''">
                location = #{location},
            </if>
            <if test="desc != null and desc != ''">
                desc = #{desc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from campus where id = #{id}
    </delete>

</mapper>

