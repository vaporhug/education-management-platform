<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fjxgwzd.undergraduateacademicadministration.dao.CounselorDao">

    <resultMap type="com.fjxgwzd.undergraduateacademicadministration.entity.Counselor" id="CounselorMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="bir" column="bir" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CounselorMap">
        select
          id, name, bir
        from counselor
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CounselorMap">
        select
          id, name, bir
        from counselor
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="bir != null">
                and bir = #{bir}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from counselor
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="bir != null">
                and bir = #{bir}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into counselor(name, bir)
        values (#{name}, #{bir})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into counselor(name, bir)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.bir})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into counselor(name, bir)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.bir})
        </foreach>
        on duplicate key update
        name = values(name),
        bir = values(bir)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update counselor
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="bir != null">
                bir = #{bir},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from counselor where id = #{id}
    </delete>

</mapper>

